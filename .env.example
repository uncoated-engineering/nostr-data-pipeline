# Nostr Configuration
NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band,wss://nostr.wine,wss://relay.snort.social

# Database Configuration
DATABASE_URL=postgresql://nostr:nostr@localhost:5432/nostr_pipeline
# For SQLite: DATABASE_URL=sqlite:///./nostr_data.db

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Pipeline Configuration
BATCH_SIZE=100
PROCESSING_INTERVAL_SECONDS=5
MAX_EVENTS_PER_BATCH=1000

# Metrics Configuration
METRICS_AGGREGATION_INTERVAL_SECONDS=60
TRENDING_WINDOW_HOURS=24
MIN_ZAPS_FOR_TRENDING=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_RELAY_CONNECTIONS=10
EVENT_BUFFER_SIZE=10000
WORKER_THREADS=4
